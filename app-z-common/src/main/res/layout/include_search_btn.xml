<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemParentStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_reset"
            android:layout_width="@dimen/dp_button_width"
            android:layout_height="@dimen/dp_button_height"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:background="@drawable/button_reset_bg"
            android:text="@string/reset"
            android:textColor="?attr/reset_color"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_search"
            android:layout_width="@dimen/dp_button_width"
            android:layout_height="@dimen/dp_button_height"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerInParent="true"
            android:background="@drawable/button_main_bg"
            android:text="@string/search"
            android:textColor="?attr/white"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>
</LinearLayout>